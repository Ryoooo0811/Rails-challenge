<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path, class="btn btn-outline-primary btn-block fas fa-user-cog " %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model : book, local:true do |f| %>
</div>