<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render '/layouts/list', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user.name, user_path(@book.user) do %>
                  <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image", size: "40x40" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(@book.id) %>
              </td>
              <td><%= book.opinion %></td>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy",  class:"btn btn-sm btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>